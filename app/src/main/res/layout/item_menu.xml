<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:layout_margin="10dp">
    <ImageView android:id="@+id/menu_kantin" android:layout_width="100dp" android:layout_height="100dp"
               android:src="@drawable/nasi"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_margin="16dp">
        <TextView android:id="@+id/nama_menu" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="menu1" android:textSize="20sp"/>
        <TextView android:id="@+id/harga_menu" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="nasi kangkung + tempe goreng" android:textSize="18sp"/>
<Button android:id="@+id/btn_tambah" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="tambah"/>
    </LinearLayout>

</LinearLayout>